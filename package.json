{
	"name": "flow-weather",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --hot src/index.ts",
		"build": "bun build ./src/index.html --outdir=dist --output=public --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
		"start": "NODE_ENV=production bun src/index.ts",
		"check": "biome check --write",
		"e2e": "playwright test",
		"e2e:ui": "playwright test --ui"
	},
	"dependencies": {
		"react": "^19",
		"react-dom": "^19",
		"react-router": "^7.10.1",
		"zustand": "^5.0.9"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@happy-dom/global-registrator": "^20.0.11",
		"@playwright/test": "^1.57.0",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/react": "^16.3.1",
		"@types/bun": "latest",
		"@types/node": "^25.0.3",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"happy-dom": "^20.0.11"
	}
}